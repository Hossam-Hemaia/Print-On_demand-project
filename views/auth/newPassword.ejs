<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
   <%- include('../includes/nav.ejs') %>
    <main>
        <form class="login-form" action="/newPassword" method="POST">
            <div class="form-control">
                <label for="password">New Password</label>
                <input type="password" name="newPassword" id="password">
            </div>
            <div class="form-control">
                <label for="confirm-password">Confirm New Password</label>
                <input type="password" name="confirmNewPassword" id="cnpassword">
            </div>
            <input type="hidden" name="token" value="<%= token %>" />
            <input type="hidden" name="reseterId" value="<%= reseterId %>" />
            <input type="hidden" name="reseterType" value="<%= reseterType %>" />
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button class="btn" type="submit">Create Password</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>
</body>